body 
    margin 0
    padding 0
    text-align center

ul  
    list-style: none

#parqueos
    margin 3em auto
    padding 0    

    .puesto
        margin 0
        padding 0
        width 150px
        height 100px
        border 1px solid rgba(0,0,0,0.1)
        position relative
        text-align: center
        border-radius: 0.2em
        background green
        display inline-block
        vertical-align:  top

        p  
            position: absolute
            bottom 0
            margin 0 auto
            padding 0.3em
            text-transform: uppercase
            font-size 10px
            font-family: 'Verdana'
            font-weight: bold
            color white
    
    .ocupado
        background red


